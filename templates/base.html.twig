    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}

        <link rel="stylesheet" href="{{ asset('style/style.css') }}">
    </head>
    <body>
        {% block content %}
           <nav class="navbar">
                <div class="logo">
                    <a href="{{ path('app_home') }}">
                    <img src="{{ asset('images/logo.png') }}" alt="Logo">
                    </a>
                </div>

                <div class="title-center">
                    <span>Le Masque<br>du Virtuose</span>
                </div>

                <div class="nav-right">
                    {% if app.user %}
                    <div class="user-info-fixed">
                        {% if app.user.avatar %}
                        <img src="{{ asset('uploads/avatars/' ~ app.user.avatar) }}" alt="Avatar" class="avatar-navbar">
                        {% else %}
                        <img src="{{ asset('images/default-avatar.png') }}" alt="Avatar par d√©faut" class="avatar-navbar">
                        {% endif %}
                        <span>{{ app.user.pseudo }}</span>
                    </div>
                    {% endif %}

                    <input type="checkbox" id="menu-toggle" class="menu-toggle">
                    <label for="menu-toggle" class="menu-icon">&#9776;</label>

                    <ul class="nav-links">
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    {% if app.user %}
                        <li class="dropdown">
                        <a href="{{ path('app_liste_masques') }}"> Masques ‚ñæ</a>
                        <ul class="dropdown-content">
                            <li><a href="{{ path('app_liste_masques') }}">Tous les masques</a></li>
                            <li><a href="{{ path('app_add_masque_controlleur') }}">Ajouter un masque</a></li>
                            <li><a href="{{ path('app_mes_masques') }}">Mes masques</a></li>
                        </ul>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin') }}">Admin</a></li>
                        {% endif %}
                        <li><a href="{{ path('app_profile') }}">Profil</a></li>
                        <li><a href="{{ path('app_contact') }}">Contact</a></li>
                        <li>
                        <form action="{{ path('app_logout') }}" method="post">
                            <button class="btn-logout" type="submit">üö™ D√©connexion</button>
                        </form>
                        </li>
                    {% else %}
                        <li><a href="{{ path('app_register') }}">Inscription</a></li>
                        <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    {% endif %}
                    </ul>
                </div>
                </nav>

        {% endblock %}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="global-flash {{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </body>
</html>
